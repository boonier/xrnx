                  <Param value="CC#86" type="fader" name="Fader #7" orientation="vertical" size="2" maximum="127" minimum="0" />
                  <Param value="CC#87" type="fader" name="Fader #8" orientation="vertical" size="2" maximum="127" minimum="0" />
                </Group>

                <Group name="Transport" orientation="horizontal">
                  <Param value="CC#115" type="button" name="Prev Pattern" aspect="0.8" maximum="127" minimum="0" />
                  <Param value="CC#116" type="button" name="Next Pattern" aspect="0.8" maximum="127" minimum="0" />
                  <Param value="CC#117" type="button" name="Stop" aspect="0.8" maximum="127" minimum="0" />
